@model Tourismpk.Models.Tourist
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SignUp", "Tourists"))
{
@Html.AntiForgeryToken()
                <div class="container mt-5 ">
                    <h3 class="text-center"> SignUp </h3>
                    <div class="row">

                        <div class="col-md-5">
                            <div class="form-row">
                                <div class="col">
                                    <label for="">First Name</label>
                                    <input type="text" name="Tourist_FirstName" required class="form-control">
                                </div>
                                <div class="col">
                                    <label for="">Last Name</label>
                                    <input type="text" name="Tourist_LastName" required class="form-control">
                                </div>

                            </div>
                            <div class="form-group">
                                <label for="">Email</label>
                                <input type="email" name="Tourist_Email" required class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="">Password</label>
                                <input type="password" name="Tourist_Password" required class="form-control">

                            </div>
                            <div class="form-group">
                                <label for="">Contact</label>
                                <input type="text" name="Tourist_Contact" class="form-control">

                            </div>
                            <div class="form-group">
                                <label for="">Address</label>
                                <input type="text" name="Tourist_Address" class="form-control">

                            </div>
                            <div class="form-group ">

                                <input type="submit" value="Sign Up" required class="btn btn-danger form-control">
                            </div>

                        </div>
                    </div>
                </div>}